/**index.wxss**/

.header image {
  width: 100%;
}

.goods {
  display: flex;
  overflow: hidden;
  position: absolute;
  top: 174rpx;
  /* bottom: 46px; */
  bottom: 0;
  width: 100%;
}

/* menu部分 */

.menu-wrapper {
  flex: 0 0 80px;
  width: 80px;
}

.menu-wrapper .menu-item {
  display: table;
  height: 54px;
  width: 56px;
  line-height: 12px;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
}

.menu-wrapper .menu-item:last-child {
  border-bottom: none;
}

/* good list部分 */

.goods .menu-wrapper .menu-item .text {
  text-align: center;
  display: table-cell;
  width: 56px;
  vertical-align: middle;
  position: relative;
  font-size: 12px;
}

.goods .foods-wrapper {
  flex: 1;
}

.goods .foods-wrapper .food-item {
  display: flex;
  margin: 18px;
  padding-bottom: 18px;
  position: relative;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
}

.goods .foods-wrapper .food-item:last-child {
  border-bottom: none;
}

.goods .foods-wrapper .food-item .icon {
  flex: 0 0 57px;
  margin-right: 10px;
}

.goods .foods-wrapper .food-item .icon image {
  width: 114rpx;
  height: 114rpx;
}

.goods .foods-wrapper .food-item .content {
  flex: 1;
}

.goods .foods-wrapper .food-item .content .name {
  font-size: 14px;
  height: 14px;
  line-height: 14px;
  color: #07111b;
  margin: 2px 0 8px 0;
}

.goods .foods-wrapper .food-item .content .desc, .extra {
  margin-bottom: 8px;
  line-height: 12px;
  font-size: 12px;
  color: rgb(147, 153, 159);
}

.desc {
  margin-bottom: 8px;
  line-height: 12px;
}

.goods .foods-wrapper .food-item .content .extra {
  margin-bottom: 8px;
  line-height: 12px;
  font-size: 12px;
  color: #93999f;
}

.goods .foods-wrapper .food-item .content .price {
  font-weight: 700;
  line-height: 24px;
}

.goods .foods-wrapper .food-item .content .price .now {
  margin-right: 8px;
  font-size: 14px;
  color: #f01414;
}

.cartcontrol-wrapper {
  position: absolute;
  right: 0;
  bottom: 12px;
}

.cartcontrol {
  font-size: 0;
}

.cartcontrol .cart-decrease {
  display: inline-block;
  padding: 6px;
}

.cartcontrol .cart-decrease .inner {
  display: inline-block;
  line-height: 56rpx;
  font-size: 56rpx;
  color: #00a0dc;
}

.cartcontrol .cart-count {
  display: inline-block;
  font-size: 12px;
  line-height: 56rpx;
  text-align: center;
  width: 12px;
  vertical-align: top;
  padding-top: 6px;
  color: #93999f;
}

.cartcontrol .cart-add {
  display: inline-block;
  font-size: 56rpx;
  padding: 6px;
  line-height: 56rpx;
  color: #00a0dc;
}

/*shopcart部分*/

.shopcart {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 48px;
  z-index: 50;
}

.shopcart .content {
  display: flex;
  background: #141d27;
  font-size: 0;
}

.shopcart .content .content-left {
  flex: 1;
}

.shopcart .content .content-left .logo-wrapper {
  display: inline-block;
  position: relative;
  top: -10px;
  margin: 0 12px;
  padding: 6px;
  width: 56px;
  height: 56px;
  box-sizing: border-box;
  vertical-align: top;
  border-radius: 50%;
  background-color: #141d27;
}

.shopcart .content .content-left .price {
  display: inline-block;
  margin-top: 12px;
  vertical-align: top;
  line-height: 24px;
  padding-right: 12px;
  box-sizing: border-box;
  border-right: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 16px;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.4);
}

.shopcart .content .content-left .desc {
  display: inline-block;
  vertical-align: top;
  line-height: 24px;
  margin: 12px 0 0 12rpx;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.4);
}

.shopcart .content .content-left .logo-wrapper .logo {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #2b343c;
  text-align: center;
}

.shopcart .content .content-left .logo-wrapper .num {
  position: absolute;
  top: 0;
  right: 0;
  width: 24px;
  height: 16px;
  line-height: 16px;
  text-align: center;
  border-radius: 16px;
  font-size: 9px;
  font-weight: 700;
  color: #fff;
  background: #f01414;
  -webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);
}

.shopcart .content .content-left .logo-wrapper .logo.highlight {
  background: #00a0dc;
}

.shopcart .content .content-left .logo-wrapper .logo .icon-shopping_cart {
  font-size: 24px;
  color: #80858a;
  line-height: 44px;
}

.shopcart .content .content-left .logo-wrapper .logo .icon-shopping_cart.highlight {
  color: #fff;
}

.shopcart .content .content-right {
  flex: 0 0 105px;
  width: 105px;
}

.shopcart .content .content-right .pay {
  height: 48px;
  line-height: 48px;
  text-align: center;
  font-size: 12px;
  font-weight: 700;
  background: #2b333b;
  color: rgba(255, 255, 255, 0.4);
}

.shopcart .content .content-right .pay.green {
  font-size: 14px;
  color: #fff;
  background: #00b44a;
}
