/* pages/goodsDetail/goodsDetail.wxss */

.img-header {
  width: 100%;
}

.goods {
  position: absolute;
  top: 0rpx;
  bottom: 50px;
  width: 100%;
}

/* 商品信息部分 */

.content-info {
  padding: 36rpx;
  position: relative;
}

.content-info .title {
  font-weight: 700;
  line-height: 14px;
  margin-bottom: 8px;
  color: #07111b;
  font-size: 16px;
}

.content-info .detail {
  margin: 24rpx 0;
  line-height: 10px;
  font-size: 0;
}

.content-info .detail .profile {
  font-size: 14px;
  margin-bottom: 24rpx;
}

.content-info .detail .sell-mode {
  font-size: 12px;
}

.content-info .detail .profile, .sell-mode {
  color: #93999f;
}

.content-info .price {
  font-weight: 700;
  line-height: 24px;
}

.content-info .price .now {
  margin-right: 8px;
  font-size: 14px;
  color: #f01414;
}

