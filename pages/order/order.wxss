/*订单列表*/

.orderDetails {
  background: #fff;
  border-bottom: 20rpx solid #f3f3f3;
}

.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f3f3f3;
}

.orderNo {
  margin-left: 20rpx;
  font-size: 12px;
  color: #8f8888;
}

.orderListTitle .del {
  float: right;
  width: 45rpx;
  height: 45rpx;
  margin: 15rpx;
}

.orderListTitle .del image {
  width: 100%;
  height: 100%;
}

.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #2f7b27;
  font-size: 34rpx;
  line-height: 36rpx;
}

.orderListDetails {
  display: flex;
  height: 160rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
}

.orderListDetails:last-child {
  border-bottom: none;
}

.orderListDetails .productImg {
  flex: 1;
  height: 140rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.orderListDetails .productImg image {
  width: 100%;
  height: 100%;
}

.orderListDetails .productInfo {
  flex: 4;
  padding: 20rpx 30rpx;
  font-size: 16px;
}

.orderListDetails .productInfo .productTitle {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.orderListDetails .productInfo .productQuantity {
  float: right;
}

.productCount text {
  display: inline-block;
  color: #000;
  font-size: 16px;
}

.productCount {
  height: 65px;
  font-size: 14px;
  position: relative;
  padding-top: 10px;
  color: #8f8888;
}

.productCount .menu {
  position: absolute;
  top: 40px;
  left: 0;
  width: 100%;
}

.menu .concle {
  float: right;
  font-size: 14px;
  color: #8f8888;
  line-height: 25px;
  text-align: center;
  width: 70px;
  border: 1rpx solid #8f8888;
  margin-right: 10px;
}

.menu .other {
  float: right;
  font-size: 14px;
  color: orangered;
  line-height: 25px;
  text-align: center;
  width: 70px;
  border: 1rpx solid orangered;
  margin-right: 10px;
}

.total {
  float: right;
  margin-right: 20px;
}
