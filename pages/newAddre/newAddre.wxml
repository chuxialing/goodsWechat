<!--pages/newAddre/newAddre.wxml-->
<!-- 信息部分开始 -->
<form bindsubmit="formSubmit" report-submit="true">
  <view class="info">
    <!-- 姓名部分 -->
    <view class="item">
      <text>用户姓名</text>
      <view class="right">
        <input type="text" name="receiver" placeholder="{{receiver}}" focus="{{focus}}" />
      </view>
    </view>
    <!-- 电话部分 -->
    <view class="item">
      <text>联系电话</text>
      <view class="right">
        <input name="phone" type="number" placeholder="{{phone}}" focus="{{focus}}" />
      </view>
    </view>
    <!-- 收货地址部分 -->
    <view class="item">
      <text>所在区域</text>
      <view class="right" bindtap="chooseAddress">
        <!-- <picker name="addre" class="addre" value="{{addreValue}}" range="{{addreRange}}" bindchange="addrePickerBindchange">
          {{addreRange[addreValue]}}
        </picker> -->
        <view class="addre">
          {{province == ''?'点此处选择地区':province}} {{city}} {{area}}
        </view>
      </view>
      <nyz_area_picker show="{{show}}" bind:sureSelectArea="sureSelectAreaListener">
      </nyz_area_picker>
    </view>
    <!-- 详细地址部分 -->
    <view class="item">
      <text>详细地址</text>
      <view class="right">
        <input name="detailAddress" type="text" placeholder="{{detailAddress}}" focus="{{focus}}" />
      </view>
    </view>
  </view>
  <!-- 信息部分结束 -->
  <button class="save" formType="submit">保存</button>
</form>