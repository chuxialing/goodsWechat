    <view class='section section-good'>
      <checkbox-group bindchange="checkboxChange">
        <block wx:for="{{goodList}}" wx:for-item="good" wx:key="good.name">
          <view class='good'>
            <label class="checkbox">
              <checkbox value="{{good.id}}" checked="{{good.checked}}" hidden='hidden' />
              <icon type="circle" size="23" wx:if="{{!good.checked}}"></icon>
              <icon type="success" size="23" wx:if="{{good.checked}}"></icon>
            </label>

            <image class='cover' src='{{servsersUrl}}{{good.proPic}}'></image>
            <view class='content' bindtap='gotoProductinfo' id='{{index}}' >
              <view class='text name'>{{good.proLevel}}-{{good.proName}}</view>
              <view class='text desc'>{{good.proStandard}}</view>
              <view class='text price'>¥{{good.proPrice}}</view>

            </view>
            <view class='stepper'>
              <view class='text del' bindtap='shanchu' data-id="{{good.id}}">删除</view>
              <view class='subtract {{good.count == 1 ? "disabled": ""}}' data-index='{{index}}' catchtap='subtracttap' data-proid="{{good.id}}">-</view>
              <input class='count' type='number' value='{{good.count}}'></input>
              <view class='add' data-index="{{index}}" catchtap='addtap' data-proid="{{good.id}}">+</view>
            </view>
          </view>
        </block>
      </checkbox-group>
    </view>

    <!--</block>-->

    <view class='section-bottom'>
      <checkbox-group bindchange="selectalltap">
        <label class='checkbox-allcheck'>
          <checkbox value="{{!checkAll}}" checked="{{checkAll}}" hidden='hidden' />
          <icon type="circle" size="23" wx:if="{{!checkAll}}"></icon>
          <icon type="success" size="23" wx:if="{{checkAll}}"></icon>
          <text class='check-all-text'>全选</text>
        </label>
      </checkbox-group>
      <view class="total">
      <!-->
        <view class='totalCount'>已选择
          <text>{{totalCount}}</text>件商品
        </view>-->
        <view class='totalPrice'>总价：
          <text>¥{{totalPrice}}</text>
        </view>
      </view>
      <view class='btn {{totalPrice > 0 ? "btn-primary" : "btn-default"}}' bindtap="cartPage">去结算</view>
    </view>
  </view>

</view>